<div class="container">
  <h1>Contact List</h1>
  <% if(displayName){ %>

  <a href="/contact-add" class="btn btn-primary" role="button">
    <i class="fas fa-plus-circle"></i> Add a Contact</a
  >
  <% } %>

  <div class="row">
    <div class="col">
      <table class="table table-striped table-bordered table-hover">
        <thead class="table-dark">
          <tr>
            <th scope="col" class="text-center">#</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Phone number</th>
            <% if(displayName){ %>

            <th></th>
            <th></th>
            <% } %>
          </tr>
        </thead>
        <tbody id="contactList">
          <!-- Repeatable Rows -->
          <% for(let count = 0; count < contacts.length; count++) { %>
          <tr>
            <th class="table-dark" scope="row" class="text-center">
              <%= count + 1 %>
            </th>
            <td class="table-dark"><%= contacts[count].name %></td>
            <td class="table-dark"><%= contacts[count].email %></td>
            <td class="table-dark"><%= contacts[count].contactNumber %></td>
            <% if(displayName){ %>

            <td class="table-dark" class="text-center col-1">
              <a
                href="/contact-edit/<%= contacts[count]._id %>"
                class="btn btn-info"
              >
              <i class='bx bx-edit-alt'></i></i> Edit</a
              >
            </td>

            <td class="text-center col-1">
              <a
                href="/contact-delete/<%= contacts[count]._id %>"
                class="btn btn-danger btn-sm"
              >
              <i class='bx bx-trash'></i> Delete</a
              >
            </td>
            <% } %>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>
